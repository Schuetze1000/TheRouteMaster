        "type": "object",
        "properties": {
          "firstname": {
            "type": "string",
            "example": "John"
          },
          "surname": {
            "type": "string",
            "example": "James"
          },
          "avatar": {
            "type": "string"
          },
          "homeaddress": {
            "type": "object",
            "properties": {
              "number": {
                "type": "string",
                "example": "7-9"
              },
              "street": {
                "type": "string",
                "example": "Coblitzallee"
              },
              "zip": {
                "type": "string",
                "example": 68163
              },
              "city": {
                "type": "string",
                "example": "Mannheim"
              },
              "state": {
                "type": "string",
                "example": "Baden-Württemberg"
              },
              "country": {
                "type": "string",
                "example": "Germany"
              }
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "theUser"
          },
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "firstname": {
            "type": "string",
            "example": "John"
          },
          "surname": {
            "type": "string",
            "example": "James"
          },
          "avatar": {
            "type": "string"
          },
          "homeaddress": {
            "type": "object",
            "properties": {
              "number": {
                "type": "string",
                "example": "7-9"
              },
              "street": {
                "type": "string",
                "example": "Coblitzallee"
              },
              "zip": {
                "type": "string",
                "example": 68163
              },
              "city": {
                "type": "string",
                "example": "Mannheim"
              },
              "state": {
                "type": "string",
                "example": "Baden-Württemberg"
              },
              "country": {
                "type": "string",
                "example": "Germany"
              }
            }
          }
        }
      },
      "ICS": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "data": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          }
        }
      },
      "ICS_Hash": {
        "type": "object",
        "properties": {
          "hash": {
            "type": "string"
          }
        }
      },
      "Auth_Profile": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "theUser"
          },
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "password": {
            "type": "string",
            "example": "changeme"
          }
        }
      },
      "Auth_Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "password": {
            "type": "string",
            "example": "changeme"
          }
        }
      },
      "Auth_ForgotPassword": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john@email.com"
          }
        }
      },
      "Auth_ResetPassword": {
        "type": "object",
        "properties": {
          "password": {
            "type": "string",
            "example": "changeme"
          }
        }
      }
    },
    "requestBodies": {
      "Auth_eLogin": {
        "description": "UserProfile object",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/UserProfile"
            }
          },
          "application/xml": {
            "schema": {
              "$ref": "#/components/schemas/UserProfile"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "Token"
      }
    }
  },
  "security": [
    {
      "cookieAuth": []
    }
  ]
}